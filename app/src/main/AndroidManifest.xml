<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.students4students">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".QuestionThreadActivity"
            android:parentActivityName=".user_homepage.DashboardActivity" />
        <activity
            android:name=".AddQuestionActivity"
            android:parentActivityName=".user_homepage.DashboardActivity" />
        <activity
            android:name=".user_homepage.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:launchMode="singleTop">

        </activity>
        <activity android:name=".registration.RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>